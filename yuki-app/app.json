{
  "expo": {
    "name": "Yuki AI",
    "slug": "yuki-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "yukiai",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#101d22"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.whovisions.yukiai",
      "infoPlist": {
        "NSCameraUsageDescription": "Yuki needs camera access to take photos for your cosplay transformations.",
        "NSPhotoLibraryUsageDescription": "Yuki needs photo library access to select images for transformation.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#101d22"
      },
      "package": "com.whovisions.yukiai",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.RECORD_AUDIO"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Yuki needs access to your photos for transformations.",
          "cameraPermission": "Yuki needs camera access to take photos."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "f9aca9e0-3ab9-44b7-ba1b-d9e77f33c86c"
      }
    },
    "owner": "whovisions"
  }
}
